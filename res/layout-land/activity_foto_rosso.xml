<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bellabluclient.FotoRosso" >

    <ImageButton
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_below="@+id/textView1"
        android:layout_marginRight="42dp"
        android:layout_toLeftOf="@+id/textView1"
        android:onClick="onClickIm"
        android:scaleType="centerCrop"
        android:src="@drawable/massimo" />

    <ImageButton
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_alignRight="@+id/textView1"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginLeft="26dp"
        android:onClick="onClickIm3"
        android:scaleType="centerCrop"
        android:src="@drawable/alessandro" />

    <ImageButton
        android:id="@+id/imageView4"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@+id/imageView3"
        android:onClick="onClickIm4"
        android:scaleType="centerCrop"
        android:src="@drawable/adel" />

    <ImageButton
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_alignTop="@+id/imageView1"
        android:layout_toLeftOf="@+id/imageView3"
        android:onClick="onClickIm2"
        android:scaleType="centerCrop"
        android:src="@drawable/nerino" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="21dp"
        android:text="Seleziona il cameriere/\nChoose your waiter"
        android:textSize="40dp" />

</RelativeLayout>